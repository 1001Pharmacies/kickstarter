{
  "configuration": {
    "project": "./config/project.json"
  },
  "prompt": {
    "projects": {
      "type": "list",
      "name": "type",
      "message": "In what type of project do you use Kickstarter ?"
    },
    "site": {
      "type": "input",
      "name": "site",
      "message": "Enter the URL of the website (default: empty)"
    },
    "services": {
      "type": "checkbox",
      "name": "services",
      "message": "Choose which service is available for your project",
      "choices": [
        {
          "name": "Creation of a webserver",
          "value": "webserver"
        },
        {
          "name": "Compilation of twig templates",
          "value": "twig"
        },
        {
          "name": "HTML templates",
          "value": "html"
        },
        {
          "name": "Optimization of images",
          "value": "images"
        },
        {
          "name": "Compilation of sass",
          "value": "sass"
        },
        {
          "name": "Compilation of less",
          "value": "less"
        },
        {
          "name": "Install dist resources (Font Awesome, Bootstrap)",
          "value": "dist"
        }
      ]
    }
  }
}
